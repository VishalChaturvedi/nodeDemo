 <%- include('layout/header'); %>    
  <div class="row">
    <div class="col-md-6">
      <h1>Edit Profile</h1>
      <form method="post" action="">
        <div class="form-group">
          <label for="name">Full name</label>
          <input type="text" class="form-control" value="<%= userDetails.name %>" name="name" id="name" placeholder="Enter your name" ng-model="vm.credentials.name">
        </div>
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" value="<%= userDetails.email %>" name="email" id="email" placeholder="Enter email" ng-model="vm.credentials.email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Password" ng-model="vm.credentials.password">
        </div>
        <button type="submit" class="btn btn-default">Update</button>
      </form>
    </div>
  </div>
   <%- include('layout/footer') %>