 <%- include('layout/header'); %>  
  <div class="row">
    <div class="col-md-6">
      <h1 class="form-signin-heading">Sign in</h1>
      <p class="lead">Not a member? Please <a href="/registration">register</a> instead.</p>
      <% if(error != ''){ %>
     <p class="alert alert-danger"><%= error %></p>
     <% } %>
      <% if(success != ''){ %>
     <p class="alert alert-success"><%= success %></p>
     <% } %>
      <form name="login" id="login" method="post" action="" novalidate="novalidate">
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control error" name="email" id="email" placeholder="Enter email" requird>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control error" name="password" id="password" placeholder="Password" requird>
        </div>
        <button type="submit" class="btn btn-default">Sign in!</button>
      </form>
    </div>
     <div class="col-md-6">
     <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
        <!--a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>
        <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google+</a-->

     </div>
  </div>
   <%- include('layout/footer') %>

